@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="auth-page">
    <div class="auth-card text-center">
        <div class="auth-icon" style="background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 class="mb-3">Oops! Something went wrong</h1>
        <p class="text-muted mb-4">
            An error occurred while processing your request. 
            Our team has been notified and is working to fix the issue.
        </p>
        
        @if (Model.ShowRequestId)
        {
            <div class="mb-4 p-3 rounded text-start" style="background: rgba(0, 0, 0, 0.03);">
                <small class="text-muted">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </small>
            </div>
        }
        
        <div class="d-flex gap-2 justify-content-center flex-wrap">
            <a asp-page="/Index" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Go Home
            </a>
            <button onclick="history.back()" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i>Go Back
            </button>
        </div>
    </div>
</div>
