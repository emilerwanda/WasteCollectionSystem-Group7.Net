@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <h2 class="mb-1">@Model.FullName</h2>
                <p class="mb-2 opacity-75">@Model.Username</p>
                @{
                    var badgeClass = Model.UserRole?.ToLower() switch
                    {
                        "admin" => "badge-admin",
                        "driver" => "badge-driver",
                        "manager" => "badge-manager",
                        "supervisor" => "badge-supervisor",
                        _ => "badge-user"
                    };
                }
                <span class="badge @badgeClass">@Model.UserRole</span>
            </div>
            
            <div class="profile-body">
                <partial name="_StatusMessage" for="StatusMessage" />
                
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <h5 class="mb-4 fw-bold">
                        <i class="fas fa-user-edit me-2 text-primary"></i>Edit Profile
                    </h5>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.FullName" class="form-control" placeholder="John Doe" />
                                <label asp-for="Input.FullName">Full Name</label>
                                <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="+1234567890" />
                                <label asp-for="Input.PhoneNumber">Phone Number</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-floating mt-3 mb-4">
                        <input asp-for="Username" class="form-control" placeholder="email@example.com" disabled />
                        <label asp-for="Username">Email (cannot be changed)</label>
                    </div>
                    
                    <div class="d-flex gap-2 flex-wrap">
                        <button id="update-profile-button" type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-page="./ChangePassword" class="btn btn-outline-primary">
                            <i class="fas fa-key me-2"></i>Change Password
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
