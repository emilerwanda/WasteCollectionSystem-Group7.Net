@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass = Model.StartsWith("Error") ? "alert-danger" : "alert-success";
    var icon = Model.StartsWith("Error") ? "fa-exclamation-circle" : "fa-check-circle";
    <div class="alert @statusMessageClass alert-dismissible fade show" role="alert">
        <i class="fas @icon me-2"></i>@Model
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

