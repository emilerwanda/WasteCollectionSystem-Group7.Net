@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Email Confirmed";
}

<div class="auth-page">
    <div class="auth-card text-center">
        @if (Model.StatusMessage != null && Model.StatusMessage.StartsWith("Error"))
        {
            <div class="auth-icon" style="background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);">
                <i class="fas fa-times-circle"></i>
            </div>
            <h1 class="mb-3">Confirmation Failed</h1>
            <div class="alert alert-danger text-start">
                <i class="fas fa-exclamation-circle me-2"></i>@Model.StatusMessage
            </div>
        }
        else
        {
            <div class="auth-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <h1 class="mb-3">Email Confirmed!</h1>
            <p class="text-muted mb-4">
                Your email has been confirmed successfully. You can now sign in to your account.
            </p>
            <div class="alert alert-success text-start mb-4">
                <i class="fas fa-check-circle me-2"></i>Thank you for confirming your email.
            </div>
        }
        
        <a asp-page="./Login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Sign In Now
        </a>
    </div>
</div>
