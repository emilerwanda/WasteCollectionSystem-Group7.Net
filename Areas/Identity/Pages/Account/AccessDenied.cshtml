@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="auth-page">
    <div class="auth-card text-center">
        <div class="auth-icon" style="background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);">
            <i class="fas fa-ban"></i>
        </div>
        <h1 class="mb-3">Access Denied</h1>
        <p class="text-muted mb-4">
            You don't have permission to access this page. 
            Please contact an administrator if you believe this is an error.
        </p>
        <div class="d-flex gap-2 justify-content-center flex-wrap">
            <a asp-page="/Index" asp-area="" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Go Home
            </a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </a>
        </div>
    </div>
</div>
